<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="ECOMap.ScanQrPage"
             Title="ScanQrPage">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

       

        <cv:CameraView x:Name="Camera" WidthRequest="400" HeightRequest="400"
                       IsEnabled="True"
                       IsVisible="True"
                       CamerasLoaded="Camera_CamerasLoaded"
                       BarCodeDetectionEnabled="True"
                       BarcodeDetected="Camera_BarCodeDetected"/>

        <Button 
            Text="Scan in Maui"
            Grid.Row="1"
            BackgroundColor="YellowGreen"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Margin="0,0,0,20"
            Clicked="ScanBtn_Clicked"
            
        />
        <Label 
         Text="Scan QR Code"
         VerticalOptions="Center" 
         HorizontalOptions="Center" 
         x:Name="TitleLabel"
         FontSize="Large"
         Margin="0,20,0,0"
         />
    </Grid>
</ContentPage>
